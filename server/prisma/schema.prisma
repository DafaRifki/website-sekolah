generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role
  guru     Guru?
  siswa    Siswa?
}

model Guru {
  id            Int     @id @default(autoincrement())
  nama          String
  nip           String  @unique
  mataPelajaran String
  fotoProfil    String?
  userId        Int     @unique
  user          User    @relation(fields: [userId], references: [id])
}

model Siswa {
  id           Int      @id @default(autoincrement())
  nama         String
  nis          String   @unique
  alamat       String
  tanggalLahir DateTime
  fotoProfil   String?
  userId       Int      @unique
  user         User     @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  GURU
  SISWA
}
